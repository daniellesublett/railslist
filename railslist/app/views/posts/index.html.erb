
  <button id="new-post-button">New</button>

  <div id="post-form">
    <h2>create a new post</h2>
    <ul>
      <%= form_for @post, remote: true do |f| %>
        <li>
          <%= f.label :title %>
          <%= f.text_field :title %>
        </li>
        <li>
          <%= f.label :price %>
          <%= f.text_area :price %>
        </li>
        <li>
          <%= f.label :description %>
          <%= f.text_area :description %>
        </li>
        <li>
          <%= f.label :email %>
          <%= f.text_area :email %>
        </li>
        <li>
          <%= f.submit %>
        </li>
      <% end %>
    </ul>
  </div>
<div id='status-message'></div>
<div id="posts">
  <ul>
    <% @posts.each do |post| %>
    <li><a href="categories/<%=post.category_id%>/posts"><%= post.title %></a></li>
    <%end%>
   </ul>
</div>
